<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.plugable.mcommerceapp.cpmvp1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.application.App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/ic_shopping_cart"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_shopping_cart"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup,android:usesCleartextTraffic"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.activities.AppointmentDetailActivity"></activity>
        <activity android:name=".ui.activities.BookAppointmentActivity" />
        <activity
            android:name=".ui.activities.InstructionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.AddAddressActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.DeliveryAddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.OrderSummaryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.SuccessOrderStatusActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.DeliveryScheduleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.OrderDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.CartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registration.OTPActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registration.NewPasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registration.MobileVerificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registration.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".registration.RegisterActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.RequestProductBookingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.PrivacyPolicyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.SuccessProductBookingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ProductsListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.activities.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.plugable.mcommerceapp.cpmvp1.ui.activities.SplashScreenActivity" />
        </activity>
        <activity
            android:name=".ui.activities.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ImageSlidingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ProductDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.NotificationActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e751dc6b3440790ca2f74d652ba36e631e2f089a" />

        <service
            android:name=".fcm.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
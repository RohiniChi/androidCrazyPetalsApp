<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/menu_about_us"
            android:textSize="@dimen/_14ssp"
            android:gravity="center_vertical"
            android:textColor="@android:color/background_dark"
            android:id="@+id/textViewAboutUs"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/viewDivider1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAboutUs" app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:text="@string/title_faqs"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/textViewFAQs"
            android:textSize="@dimen/_14ssp"
            android:gravity="center_vertical"
            android:textColor="@android:color/background_dark"
            app:layout_constraintEnd_toEndOf="@+id/textViewAboutUs"
            app:layout_constraintStart_toStartOf="@+id/textViewAboutUs"
            app:layout_constraintTop_toBottomOf="@+id/textViewAboutUs"/>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/viewDivider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewFAQs"
    />
    <TextView
            android:text="@string/title_contact_us"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/textViewContactUs"
            android:textSize="@dimen/_14ssp"
            android:gravity="center_vertical"
            android:textColor="@android:color/background_dark"
            app:layout_constraintStart_toStartOf="@+id/textViewFAQs"
            app:layout_constraintEnd_toEndOf="@+id/textViewFAQs"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textViewFAQs"
    />

    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/viewDivider3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewContactUs" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
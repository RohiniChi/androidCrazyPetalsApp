                android:id="@+id/otp_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:cursorVisible="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                app:cursorColor="@android:color/holo_orange_dark"
                app:itemCount="4"
                app:itemWidth="@dimen/_50sdp"
                app:layout_constraintStart_toStartOf="@+id/textViewEnterOtp"
                app:layout_constraintTop_toBottomOf="@+id/textViewEnterOtp"
                app:lineColor="@android:color/holo_orange_dark"
                app:viewType="line" />


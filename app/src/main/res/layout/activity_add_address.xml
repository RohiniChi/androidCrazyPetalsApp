<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/include2"
        layout="@layout/layout_common_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewmobileNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/mobile_no"
                android:textColor="#4f4f4f"
                app:layout_constraintBottom_toTopOf="@+id/editTextPhoneNo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <EditText
                android:id="@+id/editTextPhoneNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="10"
                android:textCursorDrawable="@null"
                app:backgroundTint="@color/colorLightGray"
                app:layout_constraintBottom_toTopOf="@+id/textViewPhoneNoError"
                app:layout_constraintEnd_toEndOf="@+id/textViewmobileNumber"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewmobileNumber"
                app:layout_constraintTop_toBottomOf="@+id/textViewmobileNumber"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:id="@+id/textViewPhoneNoError"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/edittextErrorColor"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/textViewFlatNo"
                app:layout_constraintEnd_toEndOf="@+id/editTextPhoneNo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/editTextPhoneNo"
                app:layout_constraintTop_toBottomOf="@+id/editTextPhoneNo" />

            <TextView
                android:id="@+id/textViewFlatNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorLightGray"
                android:text="@string/flat_no"
                android:textColor="#4f4f4f"
                app:layout_constraintBottom_toTopOf="@+id/editTextFlatNo"
                app:layout_constraintEnd_toEndOf="@+id/textViewPhoneNoError"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewPhoneNoError"
                app:layout_constraintTop_toBottomOf="@+id/textViewPhoneNoError" />

            <EditText
                android:id="@+id/editTextFlatNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textCursorDrawable="@null"
                app:backgroundTint="@color/colorLightGray"
                app:layout_constraintBottom_toTopOf="@+id/textViewFlatNoError"
                app:layout_constraintEnd_toEndOf="@+id/textViewFlatNo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewFlatNo"
                app:layout_constraintTop_toBottomOf="@+id/textViewFlatNo"
                tools:ignore="Autofill,LabelFor,TextFields" />

            <TextView
                android:id="@+id/textViewFlatNoError"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/edittextErrorColor"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/textViewLocality"
                app:layout_constraintEnd_toEndOf="@+id/editTextFlatNo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/editTextFlatNo"
                app:layout_constraintTop_toBottomOf="@+id/editTextFlatNo" />

            <TextView
                android:id="@+id/textViewLocality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/locality"
                android:textColor="#4f4f4f"
                app:layout_constraintBottom_toTopOf="@+id/editTextLocality"
                app:layout_constraintEnd_toEndOf="@+id/textViewFlatNo"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewFlatNoError"
                app:layout_constraintTop_toBottomOf="@+id/textViewFlatNoError" />

            <EditText
                android:id="@+id/editTextLocality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textCursorDrawable="@null"
                app:backgroundTint="@color/colorLightGray"
                app:layout_constraintBottom_toTopOf="@+id/textViewLocalityError"
                app:layout_constraintEnd_toEndOf="@+id/textViewLocality"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewLocality"
                app:layout_constraintTop_toBottomOf="@+id/textViewLocality"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:id="@+id/textViewLocalityError"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/edittextErrorColor"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/textViewPinCode"
                app:layout_constraintEnd_toEndOf="@+id/editTextLocality"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/editTextLocality"
                app:layout_constraintTop_toBottomOf="@+id/editTextLocality" />

            <TextView
                android:id="@+id/textViewPinCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/pin_code"
                android:textColor="#4f4f4f"
                app:layout_constraintBottom_toTopOf="@+id/spinnerPinCode"
                app:layout_constraintEnd_toEndOf="@+id/textViewLocalityError"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewLocalityError"
                app:layout_constraintTop_toBottomOf="@+id/textViewLocalityError" />

            <Spinner
                android:id="@+id/spinnerPinCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                app:layout_constraintEnd_toEndOf="@+id/textViewPinCode"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewPinCode"
                app:layout_constraintTop_toBottomOf="@+id/textViewPinCode" />

            <View
                android:id="@+id/dividerSpinner"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#717171"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/spinnerPinCode"
                app:layout_constraintStart_toStartOf="@+id/spinnerPinCode"
                app:layout_constraintTop_toBottomOf="@+id/spinnerPinCode" />


            <TextView
                android:id="@+id/textViewSpinnerError"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/edittextErrorColor"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/editTextArea"
                app:layout_constraintEnd_toEndOf="@+id/spinnerPinCode"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/spinnerPinCode"
                app:layout_constraintTop_toBottomOf="@+id/spinnerPinCode"
                tools:text="Some random" />

            <TextView
                android:id="@+id/textViewArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/area"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/editTextArea"
                app:layout_constraintEnd_toEndOf="@+id/spinnerPinCode"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/spinnerPinCode"
                app:layout_constraintTop_toBottomOf="@+id/textViewSpinnerError" />

            <EditText
                android:id="@+id/editTextArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/edit_text_color_selector"
                android:textCursorDrawable="@null"
                app:backgroundTint="@color/colorLightGray"
                app:layout_constraintBottom_toTopOf="@+id/textViewCity"
                app:layout_constraintEnd_toEndOf="@+id/textViewArea"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewArea"
                app:layout_constraintTop_toBottomOf="@+id/textViewArea"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:id="@+id/textViewCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/city"
                app:layout_constraintBottom_toTopOf="@+id/editTextCity"
                app:layout_constraintEnd_toEndOf="@+id/editTextArea"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/editTextArea"
                app:layout_constraintTop_toBottomOf="@+id/editTextArea" />

            <EditText
                android:id="@+id/editTextCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/edit_text_color_selector"
                android:textCursorDrawable="@null"
                app:backgroundTint="@color/colorLightGray"
                app:layout_constraintEnd_toEndOf="@+id/textViewCity"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textViewCity"
                app:layout_constraintTop_toBottomOf="@+id/textViewCity"
                tools:ignore="Autofill,LabelFor" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/holo_orange_dark"
                android:text="@string/add_address"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:visibility="visible"
                app:cornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextCity"
                app:layout_constraintVertical_bias="1.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>